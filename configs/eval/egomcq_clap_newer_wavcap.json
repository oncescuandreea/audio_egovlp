{
    "name": "EgoClip_4f",
    "n_gpu": 1,
    "arch": {
        "type": "ASE",
        "args": {
            "aud_params": {
                "max_length": 10,
                "sample_rate": 32000
            },
            "text_params": {
                "model": "bert-base-uncased",
                "pretrained": true,
                "input": "text",
                "tmodel": "bert",
                "pretrained-text": ""
            },
            "load_checkpoint": "/scratch/shared/beegfs/oncescu/models/HTSAT-BERT-FT-Clotho.pt"
        }
    },
    "data_loader": [
        {
            "type": "MultiDistTextAudVideoDataLoader",
            "args": {
                "dataset_name": "EgoClip",
                "data_dir": "/scratch/shared/beegfs/oncescu/shared-datasets/Ego4D/ego4d_chunked/",
                "meta_dir": "./dataset",
                "reader": "cv2_egoclip",
                "shuffle": true,
                "num_workers": 32,
                "batch_size": 64,
                "split": "train",
                "subsample": "mcq",
                "text_params": {
                    "input": "text",
                    "text_ext": "json",
                    "tmodel": "roberta"
                },
                "video_params": {
                    "input_res": 224,
                    "num_frames": 4,
                    "loading": "lax"
                },
                "aud_params": {
                    "audio_ext": "flac",
                    "max_length": 10,
                    "sample_rate": 32000,
                    "data_filling": "pad",
                    "data_truncating": "wavcap_trunc",
                    "use_gpt": false,
                    "left_sec": 0,
                    "right_sec": 0
                },
                "neg_param": false
            }
        }
    ],
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 3e-5
        }
    },
    "loss": {
        "type": "EgoNCE",
        "args": {}
    },
    "metrics": [
        "egomcq_accuracy_metrics"
    ],
    "trainer": {
        "epochs": 0,
        "max_samples_per_epoch": 500000,
        "save_dir": "/scratch/shared/beegfs/oncescu/coding/libs/pt/egovlp/results/EgoClip_4f",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss_0",
        "early_stop": 10,
        "init_val": true,
        "neptune": false
    },
    "visualizer": {
        "type": ""
    }
}